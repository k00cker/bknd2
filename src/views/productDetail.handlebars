<div class="container" style="padding: 2rem;">
  <a href="/products" style="color: #667eea; text-decoration: none; margin-bottom: 1rem; display: inline-block;">← Volver a productos</a>

  {{#if product}}
    <div style="background: white; border-radius: 8px; padding: 2rem; box-shadow: 0 2px 8px rgba(0,0,0,0.1); max-width: 800px;">
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: start;">
        <!-- Imágenes -->
        <div style="background: #f5f5f5; border-radius: 8px; height: 400px; display: flex; align-items: center; justify-content: center;">
          {{#if product.thumbnails}}
            <img src="{{product.thumbnails.[0]}}" alt="{{product.title}}" 
                 style="max-height: 100%; max-width: 100%; object-fit: contain;">
          {{else}}
            <div style="text-align: center; color: #999;">
              <p>No hay imágenes disponibles</p>
            </div>
          {{/if}}
        </div>

        <!-- Información del producto -->
        <div>
          <h1 style="color: #333; margin-top: 0;">{{product.title}}</h1>
          
          <!-- Código -->
          <p style="color: #666; border-bottom: 1px solid #eee; padding-bottom: 1rem;">
            <strong>Código:</strong> {{product.code}}
          </p>

          <!-- Descripción -->
          <div style="margin-bottom: 1.5rem;">
            <h3 style="color: #333;">Descripción</h3>
            <p style="color: #666; line-height: 1.6;">{{product.description}}</p>
          </div>

          <!-- Detalles -->
          <div style="background: #f9f9f9; padding: 1rem; border-radius: 4px; margin-bottom: 1.5rem;">
            <p style="margin: 0.5rem 0;">
              <strong>Precio:</strong> 
              <span style="color: #28a745; font-size: 1.5rem; font-weight: bold;">${{product.price}}</span>
            </p>
            <p style="margin: 0.5rem 0;">
              <strong>Categoría:</strong> {{product.category}}
            </p>
            <p style="margin: 0.5rem 0;">
              <strong>Stock disponible:</strong> {{product.stock}} unidades
            </p>
            <p style="margin: 0.5rem 0;">
              <strong>Estado:</strong>
              {{#if product.status}}
                <span style="color: green; font-weight: bold;">✓ Disponible para compra</span>
              {{else}}
                <span style="color: red; font-weight: bold;">✗ No disponible</span>
              {{/if}}
            </p>
          </div>

          <!-- Botón Agregar al Carrito -->
          <button onclick="agregarAlCarrito('{{product._id}}')" 
                  {{#unless product.status}}disabled{{/unless}}
                  style="width: 100%; background: {{#if product.status}}#28a745{{else}}#ccc{{/if}}; 
                         color: white; padding: 1rem; border: none; border-radius: 4px; cursor: {{#if product.status}}pointer{{else}}not-allowed{{/if}}; 
                         font-size: 1rem; font-weight: bold;">
            {{#if product.status}}
              Agregar al Carrito
            {{else}}
              Producto no disponible
            {{/if}}
          </button>

          <!-- Ver carrito -->
          <button onclick="verCarrito()" 
                  style="width: 100%; background: #667eea; color: white; padding: 0.75rem; border: none; border-radius: 4px; cursor: pointer; 
                         font-size: 0.9rem; margin-top: 0.5rem;">
            Ver mi carrito
          </button>
        </div>
      </div>
    </div>
  {{else}}
    <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; text-align: center;">
      <p style="color: #999; font-size: 1.1rem;">Producto no encontrado</p>
    </div>
  {{/if}}
</div>

<script>
  function agregarAlCarrito(productId) {
    let carritoId = localStorage.getItem('carritoId');
    
    if (!carritoId) {
      fetch('/api/carts', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
      .then(r => r.json())
      .then(data => {
        carritoId = data.payload._id;
        localStorage.setItem('carritoId', carritoId);
        agregarProductoAlCarrito(carritoId, productId);
      })
      .catch(e => alert('Error: ' + e.message));
    } else {
      agregarProductoAlCarrito(carritoId, productId);
    }
  }

  function agregarProductoAlCarrito(carritoId, productId) {
    fetch(`/api/carts/${carritoId}/product/${productId}`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(r => {
      if (!r.ok) {
        throw new Error(`HTTP ${r.status}: ${r.statusText}`);
      }
      return r.json();
    })
    .then(data => {
      if (data.status === 'success') {
        alert('✅ Producto agregado al carrito');
      } else {
        const errorMsg = data.error || data.message || 'Error desconocido';
        alert('❌ Error: ' + errorMsg);
      }
    })
    .catch(e => {
      console.error('Error en agregarProductoAlCarrito:', e);
      alert('❌ Error: ' + e.message);
    });
  }

  function verCarrito() {
    let carritoId = localStorage.getItem('carritoId');
    if (carritoId) {
      window.location.href = '/carts/' + carritoId;
    } else {
      alert('No tienes un carrito aún. Agrega un producto primero.');
    }
  }
</script>
