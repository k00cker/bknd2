<div class="container" style="padding: 2rem;">
  <a href="/products" style="color: #667eea; text-decoration: none; margin-bottom: 1rem; display: inline-block;">← Volver a productos</a>

  <h1 style="color: #333;">Mi Carrito</h1>
  <p style="color: #666; margin-bottom: 1.5rem;">ID del carrito: <code>{{cart._id}}</code></p>

  {{#if products}}
    <div style="margin-bottom: 2rem;">
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="background: #f5f5f5; border-bottom: 2px solid #667eea;">
            <th style="padding: 1rem; text-align: left;">Producto</th>
            <th style="padding: 1rem; text-align: center;">Cantidad</th>
            <th style="padding: 1rem; text-align: right;">Precio Unitario</th>
            <th style="padding: 1rem; text-align: right;">Subtotal</th>
            <th style="padding: 1rem; text-align: center;">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
            {{#if this.product}}
              <tr style="border-bottom: 1px solid #eee;">
                <td style="padding: 1rem;">
                  <strong>{{this.product.title}}</strong><br>
                  <small style="color: #999;">Código: {{this.product.code}}</small>
                </td>
                <td style="padding: 1rem; text-align: center;">
                  <div style="display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                    <button onclick="actualizarCantidad('{{../cart._id}}', '{{this.product._id}}', {{this.quantity}} - 1)" 
                            style="background: #ddd; border: none; width: 30px; height: 30px; cursor: pointer; border-radius: 4px;">-</button>
                    <span style="min-width: 40px; text-align: center;">{{this.quantity}}</span>
                    <button onclick="actualizarCantidad('{{../cart._id}}', '{{this.product._id}}', {{this.quantity}} + 1)" 
                            style="background: #667eea; color: white; border: none; width: 30px; height: 30px; cursor: pointer; border-radius: 4px;">+</button>
                  </div>
                </td>
                <td style="padding: 1rem; text-align: right;">
                  ${{this.product.price}}
                </td>
                <td style="padding: 1rem; text-align: right;">
                  <strong style="color: #28a745;">
                    ${{multiply this.product.price this.quantity}}
                  </strong>
                </td>
                <td style="padding: 1rem; text-align: center;">
                  <button onclick="eliminarProducto('{{../cart._id}}', '{{this.product._id}}')" 
                          style="background: #dc3545; color: white; padding: 0.5rem 1rem; border: none; border-radius: 4px; cursor: pointer;">
                    Eliminar
                  </button>
                </td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>

      <!-- Resumen -->
      <div style="margin-top: 2rem; text-align: right; max-width: 400px; margin-left: auto;">
        <div style="background: #f9f9f9; padding: 1.5rem; border-radius: 8px;">
          <p style="margin: 0.5rem 0; font-size: 1.1rem;">
            <strong>Total de productos:</strong> 
            <span style="color: #667eea;">{{calcularTotal products 'cantidad'}}</span>
          </p>
          <p style="margin: 0.5rem 0; font-size: 1.3rem; color: #28a745; border-top: 2px solid #ddd; padding-top: 1rem;">
            <strong>Total a pagar:</strong> 
            <span style="font-size: 1.5rem;">${{calcularTotal products 'precio'}}</span>
          </p>
        </div>
      </div>

      <!-- Botones de Acciones -->
      <div style="margin-top: 2rem; display: flex; gap: 1rem;">
        <button onclick="continuarComprando()" 
                style="flex: 1; background: #667eea; color: white; padding: 1rem; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem; font-weight: bold;">
          Continuar Comprando
        </button>
        <button onclick="vaciarCarrito('{{cart._id}}')" 
                style="flex: 1; background: #dc3545; color: white; padding: 1rem; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem; font-weight: bold;">
          Vaciar Carrito
        </button>
        <button onclick="finalizarCompra()" 
                style="flex: 1; background: #28a745; color: white; padding: 1rem; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem; font-weight: bold;">
          Finalizar Compra
        </button>
      </div>
    </div>
  {{else}}
    <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; text-align: center;">
      <p style="color: #999; font-size: 1.1rem; margin-bottom: 1.5rem;">Tu carrito está vacío</p>
      <a href="/products" style="background: #667eea; color: white; padding: 0.75rem 1.5rem; text-decoration: none; border-radius: 4px; display: inline-block;">
        Ir a comprar
      </a>
    </div>
  {{/if}}
</div>

<script>
  function actualizarCantidad(cartId, productId, nuevaCantidad) {
    if (nuevaCantidad < 1) {
      if (confirm('¿Deseas eliminar este producto del carrito?')) {
        eliminarProducto(cartId, productId);
      }
      return;
    }

    fetch(`/api/carts/${cartId}/product/${productId}`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ quantity: nuevaCantidad })
    })
    .then(r => r.json())
    .then(data => {
      if (data.status === 'success') {
        location.reload();
      } else {
        alert('Error: ' + data.error);
      }
    })
    .catch(e => alert('Error: ' + e.message));
  }

  function eliminarProducto(cartId, productId) {
    fetch(`/api/carts/${cartId}/product/${productId}`, {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(r => r.json())
    .then(data => {
      if (data.status === 'success') {
        location.reload();
      } else {
        alert('Error: ' + data.error);
      }
    })
    .catch(e => alert('Error: ' + e.message));
  }

  function vaciarCarrito(cartId) {
    if (!confirm('¿Estás seguro de que deseas vaciar el carrito?')) {
      return;
    }

    fetch(`/api/carts/${cartId}`, {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(r => r.json())
    .then(data => {
      if (data.status === 'success') {
        location.reload();
      } else {
        alert('Error: ' + data.error);
      }
    })
    .catch(e => alert('Error: ' + e.message));
  }

  function continuarComprando() {
    window.location.href = '/products';
  }

  function finalizarCompra() {
    alert('¡Compra finalizada! (Funcionalidad en desarrollo)');
  }
</script>

